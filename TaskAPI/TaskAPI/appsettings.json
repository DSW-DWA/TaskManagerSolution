{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=taskdb;Username=postgres;Password=postgres",
    "EventLoggerConnection": "https://localhost:7046"
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/task-api-.log",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
